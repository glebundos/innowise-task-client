@model IEnumerable<innowise_task_server.Models.Fridge>

@{
    ViewData["Title"] = "Холодильники";
}

<h2>Список холодильников</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelID)
        </th>
    </tr>

@foreach (var fridge in Model) {
    <tr>
        <td>
            @Html.DisplayFor(item => fridge.ID)
        </td>
        <td>
            @Html.DisplayFor(item => fridge.Name)
        </td>
        <td>
            @Html.DisplayFor(item => fridge.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(item => fridge.ModelID)
        </td>
        <td>
            <a asp-area="" asp-controller="Home" asp-action="ListProducts" asp-route-id="@fridge.ID">Продукты</a>
        </td>
        <td>
            <a asp-area="" asp-controller="Home" asp-action="Edit" asp-route-id="@fridge.ID">Редактировать холодильник</a><br/>
                <form asp-controller="Home" asp-action="Delete" method="post"
                onclick="return confirm('Are you sure you want to submit ?')" asp-route-id="@fridge.ID">
                    <input type="submit" value="Удалить" />
            </form>
        </td>
    </tr>
}
</table>
<a asp-area="" asp-controller="Home" asp-action="Create">Добавить холодильник</a>

